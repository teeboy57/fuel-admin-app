<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="application.ResetPasswordController"
           prefWidth="450" prefHeight="300"
           stylesheets="@style.css">

    <VBox alignment="CENTER" spacing="15" prefWidth="350">

        <Label text="Reset Password" styleClass="header-label"/>

        <HBox spacing="10" alignment="CENTER_LEFT" prefWidth="350">
            <Label text="ID Number:" minWidth="140"/>
            <TextField fx:id="idField" promptText="Enter your ID Number" prefWidth="200"/>
        </HBox>

        <HBox spacing="10" alignment="CENTER_LEFT" prefWidth="350">
            <Label text="New Password:" minWidth="140"/>
            <PasswordField fx:id="newPasswordField" promptText="Enter new password" prefWidth="200"/>
        </HBox>

        <HBox spacing="10" alignment="CENTER_LEFT" prefWidth="350">
            <Label text="Confirm Password:" minWidth="140"/>
            <PasswordField fx:id="confirmPasswordField" promptText="Confirm new password" prefWidth="200"/>
        </HBox>

        <HBox spacing="10" alignment="CENTER">
            <Button text="Back" onAction="#handleBack" styleClass="nav-button"/>
            <Button text="Reset" onAction="#handleReset" styleClass="nav-button"/>
        </HBox>

    </VBox>

</StackPane>
